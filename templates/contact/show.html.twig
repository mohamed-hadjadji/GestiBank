{% extends 'dashboard/index_admin.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ contact.fullname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ contact.tel }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>

            <tr>
    <td> <a href="{{ path('app_contact_index') }}"class="btn btn-primary btn-sm" role="button" style="display: inline-block;">Revenir aux messages</a></td>
    <tr><td>
    {# {{ include('contact/_delete_form.html.twig') }} #}
    <form method="post" action="{{ path('app_contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                        <button class="btn btn-danger btn-sm" style="display: inline-block;">Supprimer</button>
                    </form>
    
    </td></tr>
        </tbody>
    </table>

    {# <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a> #}

{% endblock %}
