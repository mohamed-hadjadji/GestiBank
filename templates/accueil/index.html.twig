{% extends 'base.html.twig' %}
{% block logo %} 
{% for config in configurations %}
<img class="img-fluid" width="15%" src="{{ asset('uploads/configurations/'~ config.logo ~'') }}" alt="logo" /> 
 {% endfor %}
{% endblock %}
{% block actuality %}
  {% for config in configurations %}
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">{{ config.titre }}</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">{{ config.description }}</p>
            </div>
        </div>
            </div>
            {% endfor %}
                {% endblock %}
{% block news %}
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class=" marketing m-5">
    <h2 class="text-center m-3">Nos actualités</h2>
    <hr class="divider mb-5" />

    <div class="row text-center">
        {% for new in news %}
        <div class="col-lg-4">
            <img class="rounded-circle" src="{{asset('assets/img/uploads/'~ new.image)}}" alt="Generic placeholder image" width="300" height="300">
            <h3 class="my-2" style="color: coral">{{new.title}}</h3>
            <p>{{new.description}}</p>
            <p><a class="btn btn-dark" href="#" role="button">Voir détails &raquo;</a></p>
        </div>
        {% endfor %}
    </div>
{% endblock %}

{% block service %}
   {% for config in configurations %}
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">{{ config.serviceTitre }}</h2>
        <hr class="divider" />
        <div class="row gx-4 gx-lg-5">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-gem fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Sturdy Themes</h3>
                    <p class="text-muted mb-0">Our themes are updated regularly to keep them bug free!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-laptop fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Up to Date</h3>
                    <p class="text-muted mb-0">All dependencies are kept current to keep things fresh.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-globe fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Ready to Publish</h3>
                    <p class="text-muted mb-0">You can use this design as is, or you can make changes!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-heart fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Made with Love</h3>
                    <p class="text-muted mb-0">Is it really open source if it's not made with love?</p>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock  %}
{% block conversion %}
<div class="site-section cta-big-image">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-8 text-center">
                <h2 class="text-center mt-0">Conversion devise</h2>
                <p class="lead" data-aos="fade-up" data-aos-delay="100">Merci d'indiquer la devise départ et la devise d'arrivée ainsi que le montant à convertir</p>
            </div>
        </div>
        <div class="row">
            <div class="row form-group justify-content-center">
                <div class="col-md-8 mb-8">
                    <label class="text-black" for="devisedepart">Devise départ</label>
                    <input type="text" value="USD" name="devisedepart" id="devisedepart" class="form-control" disabled>
                </div>
                <div class="col-md-8">
                    <label class="text-black" for="devisearrive">Devise arrivée</label>
                    <select id="devisearrive" class="form-control" name="devisearrive">
                        <option value="--">--</option>
                        <option value="EUR">EUR</option>
                        <option value="TND">TND</option>
                        <option value="DZD">DZD</option>
                        <option value="MAD">MAD</option>
                    </select>

                </div>
            </div>
            <div class="row form-group justify-content-center">

                <div class="col-md-8">
                    <label class="text-black" for="montant">Montant</label>
                    <input type="text" name="montant" id="montant" class="form-control">
                </div>
            </div>

            <div class="row form-group justify-content-center">
                <div class="col-md-8">
                    <button id="btnconversion" class="btn btn-primary btn-xl">Convertir</button>
                </div>
            </div>
        </div>
        <div class="row form-group justify-content-center">

                <div class="col-md-2 justify-content-center">
                    <label class="text-black" for="resultConversion">Résultat de conversion</label>
                    <input type="text" name="resultConversion" id="resultConversion" class="form-control">
                </div>
            </div>
    </div>
</div>
{% endblock  %}
