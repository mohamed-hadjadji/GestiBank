{% extends 'dashboard/index_admin.html.twig' %}

{% block title %}Liste d'utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-black">Liste d'utilisateurs</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th>Id_utilisateur</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a class="text-warning text-decoration-none mx-2" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                    {#  <a class="text-white text-decoration-none m-1" href="{{ path('app_user_edit', {'id': user.id}) }}"><img height="30px" src="{{ asset('assets/img/update.jpg')}}"></a></button>#}
                    <a class="text-white text-decoration-none "class="text-white text-decoration-none " href="{{ path('app_user_delete', {'id': user.id}) }}"><img height="30px" src="{{ asset('assets/img/delete.jpg')}}"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun utilisateur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}